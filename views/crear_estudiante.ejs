                <label for="password">Contrase침a</label>
            </div>

            <div class="input-field col s12">
                <i class="material-icons prefix">lock</i>
                <input id="password_confirmar" name="password_confirmar" type="password" placeholder="Password"  required>
                <label for="password">Repetir Contrase침a</label>
            </div>
        </div>
        <h5>Datos Personales</h5>
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">assignment_ind</i>
                <input placeholder="Nombres"  name="nombre" id="nombre" type="text" class="active" required>
