<body>

<div class="row">
    <form id="formEstudiante" class="col s6 offset-s3" action="/estudiantes/crear" method="post">
        <h3>Registro</h3>
        <div class="card-panel">
        <div class="row">
            <h5>Datos de la Cuenta</h5>

            <div class="input-field col s12">
                <i class="material-icons prefix">account_circle</i>
                <input placeholder="Correo"  id="email" name="email" type="email" class="active" required>
                <label for="email"  data-success="">Correo</label>
            </div>

            <div class="input-field col s12">
                <i class="material-icons prefix">lock</i>
