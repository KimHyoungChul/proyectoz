<body>
<% include nav.ejs %>
<div class="row">
    <div class="col s4 offset-s4">
            <div class="card-panel">
                <div class="row">

                    <form id="formLogin"  action="/login/" method="post">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">account_circle</i>
                            <input placeholder="Correo"  id="email" name="email" type="email" class="active" value="u2@u2.u2" required>
                            <label for="email"  data-success="">Correo</label>
                        </div>

                        <div class="input-field col s12">
                            <i class="material-icons prefix">lock</i>
                            <input id="password" name="password" type="password" placeholder="Password" value="usuario2" required>
                            <label for="password">Contraseña</label>
                        </div>
                    </form>
                    <p id = 'login-incorrecto' style="color: red">Email o Contraseña incorrectos</p>

                    <button  id="btn-login" class="btn waves-effect waves-light"  name="action">Entrar
                    </button>

                </div>
            </div>
    </div>


</div>
