<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/bower_components/materialize/dist/css/materialize.min.css">
    <meta charset="UTF-8">
    <title>ProyectoZ</title>
</head>
<body>
<% include nav.ejs %>
<div class="container">
    <div class="row">
        <div class="col s12">
            <h3>Mis sesiones</h3>
            <% sesiones.forEach(function(sesion) { %>
            <%
                var titulo = sesion.Tutor.Usuario.nombre+" "+sesion.Tutor.Usuario.apellido+", "+sesion.Tutor.Usuario.email;

                var fecha_sin_timezone = moment(sesion.fecha).format('YYYY-MM-DD');
                var momento_mostrado = moment(fecha_sin_timezone+' '+sesion.hora_inicio+'.001-04');

                var color = sesion.estado == 'futura' ? 'green lighten-1' : 'green darken-1';
            %>
            <div class="card <%= color %>">
                <div class="card-content white-text">
                <span class="card-title">
                    <b><%= titulo %></b>
                    &nbsp;
                    &nbsp;
                    &nbsp;
                    <% if(sesion.estado === 'en-proceso') { %>
                    <a href="/sesion/<%= sesion.id %>">
                        <div class="chip white">
                            Ir
                        </div>
                    </a>
                    <% } %>
                </span>
                <p>Sera impartida <%= momento_mostrado.fromNow() %></p>

                </div>
                <div class="card-action">
                    <% sesion.Solicitud.Keywords.forEach(function(keyword) { %>
                    <a href="/sesion/tag/<%= keyword.id %>" class="chip black-text"><%= keyword.texto %></a>
                    <% }); %>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>
<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/bower_components/materialize/dist/js/materialize.min.js">
</script>
</body>
</html>