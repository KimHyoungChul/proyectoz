<body>
<% include nav.ejs %>
<div class="container">
    <div class="row">
        <h3>Ver Solicitudes</h3>
        <div class="col s12">
            <div class="col s6">
                <% solicitudes.forEach(function(sol) {  %>
                <div class="card green darken-4">
                    <div class="card-content white-text">
                        <span class="card-title">
                            <%= sol.titulo %>
                        </span>
                        <p><%= sol.cuerpo %></p>
                    </div>
                    <div class="card-action">
                        <a href="#">This is a link</a>
                        <a href="#">This is a link</a>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

