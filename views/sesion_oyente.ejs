<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="/bower_components/materialize/dist/css/materialize.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/kurento.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/custom.css" rel="stylesheet">

    <script src="/socket.io/socket.io.js"></script>
    <script src="/bower_components/adapter.js/adapter.js"></script>
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/jquery-ui/jquery-ui.min.js"></script>
    <script src="/bower_components/materialize/dist/js/materialize.min.js"></script>
    <script src="/bower_components/kurento-utils/js/kurento-utils.js"></script>
    <script src="/js/oyente.js"></script>
    <title>ProyectoZ</title>
</head>
<body>
    <div class="container">
        <%if (todavia) { %>
        <p>Falta tiempo para iniciar la tutoria</p>
        <%}
        else{ %>
        <div class="row">
            <div class="col-md-6 texto-centrado">
                <div class="row">
                    <hr/>
                    <div class="col-md-4 texto-centrado">
                        <a id="btn-presenter" href="#" class="btn btn-primary btn-block">Tutor</a>
                        <br/>
                        <h3 id="presenter-id"></h3>
                    </div>
                    <div class="col-md-4 texto-centrado">
                        <div class="alert alert-warning">
                            <a id="btn-viewer" href="#" class="btn btn-default btn-block">Oyente</a>
                            <br>
                            <input class="form-control" id="presenter-input" type="text">
                        </div>
                        <br>
                    </div>
                    <div class="col-md-4 texto-centrado">
                        <a id="btn-finalizar" href="#" class="btn btn-danger btn-block">Detener transmision</a>
                    </div>
                </div>
                <div id="video-div">
                    <video id="video" autoplay width="600px" height="440px"></video>
                </div>
            </div>
            <div class="col-md-5 col-md-offset-1 texto-centrado right-side">
                <hr/>
                <div class="row">
                    <div class="col-md-12 texto-centrado">
                        <div class="panel panel-default chatbox">
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-md-9">
                                        <input id="m">
                                    </div>
                                    <div class="col-md-3">
                                        <a id="btn" href="#" class="btn btn-success btn-block">Enviar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 texto-centrado">
                        <div class="panel panel-default chatbox">
                            <div class="panel-body">
                                <ul id="messages"></ul>
                            </div>
                        </div>
                    </div>
                    <input id="sesion-id" type="hidden" value="<%= sesion %>" />
                </div>
            </div>
        </div>
    </div>
    <div id="question_modal_div" class="modal bottom-sheet">
        <div class="modal-content">
            <h5 id="question_title">Modal Header</h5>
            <div class="row">
                <form id="form_pregunta" action="/sesion/responder_evaluacion/" method="post">
                    <input type="hidden" name="sesion" value="<%= sesion %>" />
                    <div id="question_choices_div" class="col s8"></div>
                    <div class="col s4">
                        <button type="submit" class="waves-effect waves-green btn btn-large">Enviar Respuesta</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <% }%>
</body>
</html>
